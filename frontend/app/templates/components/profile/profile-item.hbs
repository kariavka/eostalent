<h3>{{model.title}}</h3>

<hr/>

{{#if canShowDescription}}
  <div class="mb-3">
    <div class="mb-1">
      {{model.description}}
    </div>
  </div>
{{else}}
  {{#if isRequesting}}
    <button class="btn btn-primary disabled" disabled="disabled">
      <i class="fa fa-spin fa-spinner"></i>
      Requesting...
    </button>
  {{else}}
    <button class="btn btn-primary" {{action "request"}}>
      Request Info
    </button>
  {{/if}}

{{/if}}